\begin{frame}{Investigating altered light intensity}
  \begin{columns}[c]
    \begin{column}[c]{0.5\textwidth}
      \begin{itemize}
        \item Within a simulated climate, modify light intensity
        \item Create 3 new conditions:
          \begin{itemize}
            \item Sufficient light
            \item Fluctuating light
            \item Excess light
          \end{itemize}
      \end{itemize}
    \end{column}
    \begin{column}[c]{0.5\textwidth}
      \begin{figure}[h]
        \begin{center}
          \includegraphics[width=\textwidth]{img/allcond.png}
        \end{center}
        \label{fig:conditions}
      \end{figure}
    \end{column}
  \end{columns}
\end{frame}

\begin{frame}{Investigating altered light intensity}
  \begin{itemize}
    \item Hypothesised ``hardening'' of plants to harser conditions
      \begin{itemize}
        \item Increased steady state expression of stress genes
        \item Decreased induction of stress genes after stress
      \end{itemize}
    \item Hypothesied a relative order of ``hardening''
      \begin{enumerate}
        \item Fluctuating light
        \item Excess light
        \item Sufficient light
        \item Standard growth conditions
      \end{enumerate}
  \end{itemize}
\end{frame}

